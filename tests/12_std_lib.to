do assert(keys({1: 1, 2: 2, 3: 3}), [1, 2, 3])
do assert(values({1: 1, 2: 2, 3: 3}), [1, 2, 3])
do assert(entries({1: 1, 2: 2, 3: 3}), [[1, 1], [2, 2], [3, 3]])
do setNameSpace("variables.to")

/// Global Scope

make global = 0
const global_const = 0

do assert(global, 0)
do assert(global_const, 0)

set global = 1
do assert(global, 1)
do assert(global_const, 0)

set global = "String" // type switch
do assert(global, "String")
do assert(global_const, 0)

set global = 1.0 // type switch

do assert(global, 1.0)
do assert(global_const, 0)

set global = true // type switch
do assert(global, true)
do assert(global_const, 0)

set global = false // type switch
do assert(global, false)
do assert(global_const, 0)

set global = null // type switch
do assert(global, null)
do assert(global_const, 0)

set global = [1, 2, 3] // type switch
do assert(global, [1, 2, 3])
do assert(global_const, 0)

do expectError(void () => { set not_defined = 0 }, 34)
do expectError(void () => { set global_const = 0 }, 54)
do expectError(void () => { set global_const += 1 }, 54)

const global_string = "String"

do assert(global_string, "String")

do expectError(void () => { set global_string#0 = 's' }, 54)

make a, b, c = 1, 2, 3
do assert(a, 1)
do assert(b, 2)
do assert(c, 3)

set a, b, c = b, c, a
do assert(a, 2)
do assert(b, 3)
do assert(c, 1)

set a, b, c++
do assert(a, 3)
do assert(b, 4)
do assert(c, 2)

set a, b, c--
do assert(a, 2)
do assert(b, 3)
do assert(c, 1)

set a, b, c += 10
do assert(a, 12)
do assert(b, 13)
do assert(c, 11)

set a, b, c = 1, 2, 3
do assert(a, 1)
do assert(b, 2)
do assert(c, 3)

const const_a, const_b, const_c = 1, 2, 3
do assert(const_a, 1)
do assert(const_b, 2)
do assert(const_c, 3)

do expectError(void () => { set const_a = 0 }, 54)
do expectError(void () => { set const_b = 0 }, 54)
do expectError(void () => { set const_c = 0 }, 54)

make d, e, f = 1

do assert(d, 1)
do assert(e, 1)
do assert(f, 1)

set d, e += f
do assert(d, 2)
do assert(e, 2)
do assert(f, 1)


/// Local Scope
do {
    make local = 0
    const local_const = 0

    do assert(local, 0)
    do assert(local_const, 0)

    set local = 1
    do assert(local, 1)
    do assert(local_const, 0)

    set local = "String" // type switch
    do assert(local, "String")

    set local = 1.0 // type switch
    do assert(local, 1.0)

    set local = true // type switch
    do assert(local, true)

    set local = false // type switch
    do assert(local, false)

    set local = null // type switch
    do assert(local, null)

    set local = [1, 2, 3] // type switch
    do assert(local, [1, 2, 3])

    do expectError(void () => { set not_defined = 0 }, 34)
    do expectError(void () => { set local_const = 0 }, 34)
    do expectError(void () => { set local_const += 1 }, 34)

    const local_string = "String"
    
    do assert(local_string, "String")

    do expectError(void () => { set local_string#0 = 's' }, 54)

    make a, b, c = 1, 2, 3
    do assert(a, 1)
    do assert(b, 2)
    do assert(c, 3)

    set a, b, c = b, c, a
    do assert(a, 2)
    do assert(b, 3)
    do assert(c, 1)

    set a, b, c++
    do assert(a, 3)
    do assert(b, 4)
    do assert(c, 2)

    set a, b, c--
    do assert(a, 2)
    do assert(b, 3)
    do assert(c, 1)

    set a, b, c += 10
    do assert(a, 12)
    do assert(b, 13)
    do assert(c, 11)

    set a, b, c = 1, 2, 3
    do assert(a, 1)
    do assert(b, 2)
    do assert(c, 3)

    const const_a, const_b, const_c = 1, 2, 3
    do assert(const_a, 1)
    do assert(const_b, 2)
    do assert(const_c, 3)

    make d, e, f = 1

    do assert(d, 1)
    do assert(e, 1)
    do assert(f, 1)

    set d, e += f
    do assert(d, 2)
    do assert(e, 2)
    do assert(f, 1)
}